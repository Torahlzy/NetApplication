<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topiclist_item_card"
    style="@style/AppCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.torahli.myapplication.framwork.widget.SquareImagView
            android:id="@+id/topic_list_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            app:ratio="0.747"
            tools:src="@drawable/ic_default_user" />

        <TextView
            android:id="@+id/topic_list_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_title"
            tools:text="标题" />
    </LinearLayout>

</android.support.v7.widget.CardView>
